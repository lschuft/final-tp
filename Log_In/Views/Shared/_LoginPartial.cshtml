@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="highlighted-button">
            Hola @UserManager.GetUserName(User)!
        </a>
    </li>
    <li>
        <a class="highlighted-button">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm">
                <button type="submit">
                    SALIR
                </button>
            </form>
        </a>
    </li>
}
else
{
    <li>
        <a asp-area="Identity" asp-page="/Account/Register" class="highlighted-button">
            REGISTRARSE
        </a>
    </li>
    <li>
        <a asp-area="Identity" asp-page="/Account/Login" class="highlighted-button">
            INGRESAR
        </a>
    </li>
}
